<mvc:View controllerName="grcmom.controller.View1"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:form="sap.ui.layout.form">
    <Page id="page" title="{i18n>title}">
        <content>
                
            <l:VerticalLayout id="myVerticalLayout" class="sapUiContentPadding" width="100%">
                <l:content>
                    <TextArea id="Textarea" placeholder="Enter Text" growing="true" growingMaxLines="20" width="100%"/>
                </l:content>
            </l:VerticalLayout>
        </content>
        	<footer>
			<OverflowToolbar id="overflowToolbar">
                <ToolbarSpacer id="toolbarSpacer"/>
                <Button id="Reset" text="Reset" press="onPress" />
                <Button id="Generate" type="Emphasized" text="Generate MOM" press="onPress" />
            </OverflowToolbar>

		</footer>
    </Page>
</mvc:View>
